<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RepresentativeSelectActivity"
    android:orientation="vertical"
    android:background="@color/background_beige"
    android:padding="@dimen/padding_small">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/repSelection"
        android:layout_gravity="center"
        android:textSize="@dimen/font_medium"
        android:layout_marginBottom="@dimen/margin_medium"
        tools:layout_editor_absoluteX="@dimen/RepViewX"
        tools:layout_editor_absoluteY="@dimen/RepViewY" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" />
</LinearLayout>
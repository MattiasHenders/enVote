<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_beige"
    android:orientation="vertical"
    tools:context=".SignInActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/imgSize_large"
        android:layout_marginLeft="@dimen/margin_xLarge"
        android:layout_marginTop="@dimen/margin_xxxxLarge"
        android:layout_marginRight="@dimen/margin_xLarge"
        android:layout_marginBottom="@dimen/margin_xLarge"
        android:src="@drawable/ic_envote_logo"
        android:elevation="@dimen/shadowHeight"
        />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_xxxxLarge"
        android:elevation="@dimen/shadowHeight"/>
</RelativeLayout>